---
import BaseLayout from '../layouts/BaseLayout.astro';

const servicios = [
  'Seguros',
  'Inversión Inteligente',
  'Créditos',
  'Ahorro Educativo',
  'Planes de Retiro',
  'Asesoría Jurídica'
];
---

<BaseLayout title="Contacto" description="Contáctanos para recibir asesoría financiera personalizada. Estamos disponibles por WhatsApp y correo electrónico.">
  <!-- Hero -->
  <section class="hero-contacto">
    <div class="container">
      <h1>Contacto</h1>
      <p>Estamos aquí para ayudarte</p>
    </div>
  </section>

  <!-- Contacto Content -->
  <section class="contacto-section">
    <div class="container">
      <div class="contacto-grid">
        <!-- Formulario -->
        <div class="contacto-form-wrapper">
          <h2>Envíanos un mensaje</h2>
          <p class="form-description">Completa el formulario y nos pondremos en contacto contigo a la brevedad.</p>

          <form id="contactForm" class="contacto-form">
            <div class="form-group">
              <label for="nombre">Nombre completo *</label>
              <input type="text" id="nombre" name="nombre" required placeholder="Tu nombre">
            </div>

            <div class="form-group">
              <label for="email">Correo electrónico *</label>
              <input type="email" id="email" name="email" required placeholder="tu@email.com">
            </div>

            <div class="form-group">
              <label for="telefono">Teléfono (opcional)</label>
              <input type="tel" id="telefono" name="telefono" placeholder="55 1234 5678">
            </div>

            <div class="form-group">
              <label for="servicio">Servicio de interés *</label>
              <select id="servicio" name="servicio" required>
                <option value="">Selecciona un servicio</option>
                {servicios.map(servicio => (
                  <option value={servicio}>{servicio}</option>
                ))}
              </select>
            </div>

            <div class="form-group">
              <label for="mensaje">Mensaje *</label>
              <textarea id="mensaje" name="mensaje" required placeholder="¿En qué podemos ayudarte?"></textarea>
            </div>

            <button type="submit" class="btn btn-primary btn-block" id="submitBtn">
              <span class="btn-text">Enviar mensaje</span>
              <span class="btn-loading" style="display: none;">Enviando...</span>
            </button>

            <div id="formMessage" class="form-message" style="display: none;"></div>
          </form>
        </div>

        <!-- Info de contacto -->
        <div class="contacto-info">
          <h2>Otros medios de contacto</h2>

          <div class="info-cards">
            <a href="https://wa.me/5564130072" class="info-card whatsapp" target="_blank" rel="noopener">
              <div class="info-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div class="info-content">
                <h3>WhatsApp</h3>
                <p>+52 55 6413 0072</p>
                <span class="info-action">Enviar mensaje</span>
              </div>
            </a>

            <a href="mailto:contacto@asesoriafinancierateran.com" class="info-card email">
              <div class="info-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
              </div>
              <div class="info-content">
                <h3>Correo electrónico</h3>
                <p>contacto@asesoriafinancierateran.com</p>
                <span class="info-action">Enviar correo</span>
              </div>
            </a>
          </div>

          <div class="social-section">
            <h3>Síguenos</h3>
            <div class="social-links">
              <a href="#" aria-label="Facebook" class="social-link">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
                </svg>
              </a>
              <a href="#" aria-label="Instagram" class="social-link">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                  <path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z"/>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero */
  .hero-contacto {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .hero-contacto h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .hero-contacto p {
    font-size: 1.15rem;
    opacity: 0.95;
  }

  /* Contacto Section */
  .contacto-section {
    padding: 4rem 0;
  }

  .contacto-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  /* Form */
  .contacto-form-wrapper h2 {
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .form-description {
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }

  .contacto-form {
    background: white;
  }

  .btn-block {
    width: 100%;
    text-align: center;
  }

  .form-message {
    margin-top: 1rem;
    padding: 1rem;
    border-radius: var(--radius);
    text-align: center;
  }

  .form-message.success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .form-message.error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  /* Info */
  .contacto-info h2 {
    color: var(--color-primary);
    margin-bottom: 1.5rem;
  }

  .info-cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .info-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--color-bg-alt);
    border-radius: var(--radius);
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .info-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow);
    color: inherit;
  }

  .info-card.whatsapp:hover {
    border-color: #25D366;
  }

  .info-icon {
    width: 60px;
    height: 60px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .info-card.whatsapp .info-icon {
    color: #25D366;
  }

  .info-card.email .info-icon {
    color: var(--color-primary);
  }

  .info-content h3 {
    color: var(--color-primary);
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .info-content p {
    color: var(--color-text);
    font-size: 0.95rem;
    margin-bottom: 0.25rem;
  }

  .info-action {
    color: var(--color-accent);
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Social */
  .social-section {
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
  }

  .social-section h3 {
    color: var(--color-primary);
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    width: 48px;
    height: 48px;
    background: var(--color-bg-alt);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-light);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--color-primary);
    color: white;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .contacto-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  @media (max-width: 768px) {
    .hero-contacto {
      padding: 3rem 0;
    }

    .hero-contacto h1 {
      font-size: 2rem;
    }

    .contacto-section {
      padding: 3rem 0;
    }
  }
</style>

<script define:vars={{ }}>
  // Configurar la URL del webhook de n8n aquí
  const WEBHOOK_URL = 'TU_WEBHOOK_N8N_AQUI';

  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contactForm');
    const submitBtn = document.getElementById('submitBtn');
    const btnText = submitBtn?.querySelector('.btn-text');
    const btnLoading = submitBtn?.querySelector('.btn-loading');
    const formMessage = document.getElementById('formMessage');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Mostrar loading
      if (btnText) btnText.style.display = 'none';
      if (btnLoading) btnLoading.style.display = 'inline';
      if (submitBtn) submitBtn.disabled = true;
      if (formMessage) formMessage.style.display = 'none';

      // Obtener datos del formulario
      const formData = new FormData(form);
      const data = {
        nombre: formData.get('nombre'),
        email: formData.get('email'),
        telefono: formData.get('telefono') || '',
        servicio: formData.get('servicio'),
        mensaje: formData.get('mensaje'),
        fecha: new Date().toISOString()
      };

      try {
        // Si no hay webhook configurado, mostrar en consola
        if (WEBHOOK_URL === 'TU_WEBHOOK_N8N_AQUI') {
          console.log('Datos del formulario (webhook no configurado):', data);

          // Simular éxito
          if (formMessage) {
            formMessage.textContent = '¡Mensaje enviado correctamente! Nos pondremos en contacto contigo pronto.';
            formMessage.className = 'form-message success';
            formMessage.style.display = 'block';
          }
          form.reset();
        } else {
          // Enviar al webhook de n8n
          const response = await fetch(WEBHOOK_URL, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
          });

          if (response.ok) {
            if (formMessage) {
              formMessage.textContent = '¡Mensaje enviado correctamente! Nos pondremos en contacto contigo pronto.';
              formMessage.className = 'form-message success';
              formMessage.style.display = 'block';
            }
            form.reset();
          } else {
            throw new Error('Error en la respuesta del servidor');
          }
        }
      } catch (error) {
        console.error('Error al enviar:', error);
        if (formMessage) {
          formMessage.textContent = 'Hubo un error al enviar el mensaje. Por favor, intenta de nuevo o contáctanos por WhatsApp.';
          formMessage.className = 'form-message error';
          formMessage.style.display = 'block';
        }
      } finally {
        // Restaurar botón
        if (btnText) btnText.style.display = 'inline';
        if (btnLoading) btnLoading.style.display = 'none';
        if (submitBtn) submitBtn.disabled = false;
      }
    });
  });
</script>
